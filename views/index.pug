extends layout

block content
  h1= title


  if messages 
    div 
      for message in messages 
        div 
          h3 #{message.title} 
          p #{message.message}
          if user && user.membership_status !== "member"
            p #{message.date}
            p #{message.user.fullname}
          if user && user.membership_status === "admin"
            form(action=`/delete_message/${message._id}`, method="post")
              button(type="submit") Delete

  if (user)
    h1 Welcome back!

    p Membership Status: #{user.membership_status}

    if (user.membership_status === 'member')
      a(href='/join_club') Join The Club!
    
    a(href='/create_message') Create Message
    
    a(href='/log-out') Log Out
  else
    a(href='/sign-up') Sign Up
    hr
    a(href='/log-in') Log In
